<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic to localhost (for backend API) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
    
    <!-- Allow HTTPS to external images -->
    <domain-config>
        <domain includeSubdomains="true">unsplash.com</domain>
        <domain includeSubdomains="true">images.unsplash.com</domain>
        <domain includeSubdomains="true">source.unsplash.com</domain>
    </domain-config>
    
    <!-- Default config -->
    <default-domain-config>
        <pin-set expiration="2025-12-31">
            <!-- Allow all HTTPS connections by default -->
        </pin-set>
    </default-domain-config>
</network-security-config>
