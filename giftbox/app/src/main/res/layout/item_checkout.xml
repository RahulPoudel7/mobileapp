<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Item Image -->
        <ImageView
            android:id="@+id/ivCheckoutItemImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="Item image"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_image_24" />

        <!-- Item Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvCheckoutItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gift Name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/tvCheckoutItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="NPR 0"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvCheckoutItemQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Qty: 1"
                android:textSize="11sp"
                android:textColor="#999999" />
        </LinearLayout>

        <!-- Item Total -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvCheckoutItemTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NPR 0"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#6A4C93" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
