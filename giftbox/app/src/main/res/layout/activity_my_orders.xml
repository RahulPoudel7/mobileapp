<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8E4FF"
    tools:context=".view.MyOrdersActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/orders_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_purple_pink"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="6dp"
                android:contentDescription="Back"
                android:src="@drawable/back_arrow"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/orders_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="My Orders"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/orders_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:contentDescription="Profile"
                android:src="@drawable/profile_icon"
                app:tint="@android:color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/orders_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Track your surprise deliveries âœ¨"
            android:textColor="#FFE6FF"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Status chips row -->
    <HorizontalScrollView
        android:id="@+id/status_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/orders_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/chip_all"
                android:layout_width="116dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/chip_selected"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="All"
                android:textColor="@color/background"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/chip_active"
                android:layout_width="142dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/chip_unselected"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Active"
                android:textColor="#6A4C93"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/chip_completed"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/chip_unselected"
                android:gravity="center"
                android:text="Completed"
                android:textColor="#6A4C93"
                android:textSize="13sp" />
        </LinearLayout>
    </HorizontalScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMyOrders"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/status_scroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>