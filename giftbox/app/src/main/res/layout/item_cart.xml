<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Gift Image -->
        <ImageView
            android:id="@+id/ivCartItemImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="Gift image"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_image_24"
            app:tint="@color/purple_200" />

        <!-- Gift Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvCartItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gift Name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/tvCartItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="NPR 0"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvCartItemTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Total: NPR 0"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#6A4C93" />
        </LinearLayout>

        <!-- Quantity Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginEnd="8dp">

            <ImageView
                android:id="@+id/ivCartItemIncrease"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="Increase quantity"
                android:src="@drawable/ic_add_circle"
                android:scaleType="centerInside"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvCartItemQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <ImageView
                android:id="@+id/ivCartItemDecrease"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="Decrease quantity"
                android:src="@drawable/ic_remove_circle"
                android:scaleType="centerInside"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Remove Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCartItemRemove"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:text="Remove"
            android:textSize="10sp"
            app:strokeColor="@color/red"
            android:textColor="@color/red" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
