<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white"
    android:padding="24dp">

    <!-- Success Icon -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_check_circle"
        android:tint="#4CAF50"
        android:layout_marginBottom="24dp" />

    <!-- Success Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Placed Successfully!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="12dp" />

    <!-- Order Number -->
    <TextView
        android:id="@+id/tvOrderNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order #ORD-00001"
        android:textSize="18sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <!-- Amount -->
    <TextView
        android:id="@+id/tvOrderAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: NPR 1,299"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="24dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/tvSuccessMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for your order!\nWe'll notify you when your order is on the way."
        android:textSize="14sp"
        android:textColor="#999999"
        android:textAlignment="center"
        android:layout_marginBottom="32dp" />

    <!-- View Order Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewOrder"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="View Order Details"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:backgroundTint="#9C27B0"
        app:cornerRadius="8dp"
        android:layout_marginBottom="12dp" />

    <!-- Continue Shopping Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinueShopping"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Continue Shopping"
        android:textSize="16sp"
        android:textColor="#9C27B0"
        app:backgroundTint="@android:color/transparent"
        app:strokeColor="#9C27B0"
        app:strokeWidth="2dp"
        app:cornerRadius="8dp" />

</LinearLayout>
