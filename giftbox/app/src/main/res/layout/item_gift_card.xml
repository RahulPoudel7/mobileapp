<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Gift Image -->
        <ImageView
            android:id="@+id/iv_gift_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:contentDescription="Gift Image"
            android:src="@drawable/gift_placeholder" />

        <!-- Gift Name -->
        <TextView
            android:id="@+id/tv_gift_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Gift Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Gift Description -->
        <TextView
            android:id="@+id/tv_gift_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Gift Description"
            android:textSize="13sp"
            android:textColor="#666666"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Gift Price -->
        <TextView
            android:id="@+id/tv_gift_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Rs. 999"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#6A4C93" />

        <!-- Add to Cart Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="Add to Cart"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="#6A4C93"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_input_add"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            app:iconSize="18dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
